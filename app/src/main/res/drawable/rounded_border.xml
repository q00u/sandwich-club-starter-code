<?xml version="1.0" encoding="utf-8"?>
<!--Rounded border based on http://www.gadgetsaint.com/tips/rounded-corners-views-layouts-android/-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid
        android:color="@color/colorSecondaryLight" />

    <corners android:radius="10dp" />

    <padding
        android:left="20dp"
        android:top="10dp"
        android:right="20dp"
        android:bottom="10dp"    >
    </padding>

</shape>